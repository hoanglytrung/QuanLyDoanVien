<Window x:Class="QuanLyDoanVien.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDoanVien"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300"
        WindowStyle="None" WindowState="Normal" WindowStartupLocation="CenterScreen">

    <Grid Background="#FF5F99FF">
        <Label Content="User Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,98,0,0"/>
        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,138,0,0"/>
        <TextBox x:Name="tb_username" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="134,101,0,0" />
        <PasswordBox x:Name="ps_password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="134,138,0,0" Width="120" Height="23" />
        <Button Content="Đăng nhập" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="70,190,0,0" Click="Button_Login_Click" Background="{x:Null}"/>
        <Button Content="Thoát" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="150,190,0,0" Click="Button_Exit_Click" Background="{x:Null}"/>

    </Grid>
</Window>
